{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es2017"
        ],

        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "noEmitOnError": false,

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*"]
}
